<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="true" >

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:padding="10dp"
            android:src="@drawable/img_check"
            android:textColor="@color/text_color1"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/img_check"
            android:clickable="false"
            android:padding="10dp"
            android:text="ä¼š"
            android:textColor="@color/text_color1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_meeting"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="#44CDD7"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_meetingnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:text="80%"
            android:textColor="@color/text_color1"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/zhufeiyu1/Documents/studiowork/kq3/KQ/res/layout/vote_item1.xml -->