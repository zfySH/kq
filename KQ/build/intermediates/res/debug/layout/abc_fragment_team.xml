<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:orientation="horizontal" >

        
        <ImageButton
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/left" />
        

        <TextView
            android:id="@+id/abc_fragment_team__title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_top_bar"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/abc_fragment_person__tv_match"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_bar_font_size"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/abc_button_viewpager_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/all"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/abc_button_viewpager_white_left"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="全部比赛"
                android:textColor="@color/top_bar_normal_bg"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/important"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="16.0dip" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/abc_fragment_team__ll_fragmentlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:background="@color/new_common_bg"
        android:orientation="horizontal" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/zhufeiyu1/Documents/studiowork/kq3/KQ/res/layout/abc_fragment_team.xml -->