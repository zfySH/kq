<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_common_bg" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg" >

        <include layout="@layout/abc_include_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="吹牛"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_bar_font_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:background="#fff" 
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/wcrel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip" >

            <TextView
                android:id="@+id/mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dp"
                android:text="我猜"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/referenceQuestions_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:padding="5dp"
                android:text="参考问题"
                android:textColor="#868687"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/referenceQuestions_EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mc"
                android:layout_margin="10dip"
                android:background="@drawable/abc_button_roundcorner_chuiniu"
                android:hint="请输入"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#868687"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dzrel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wcrel"
            android:layout_marginTop="20dip" >

            <TextView
                android:id="@+id/dz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dp"
                android:text="赌注"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/referenceBet_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:padding="5dp"
                android:text="参考赌注"
                android:textColor="#868687"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/referenceBet_EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dz"
                android:layout_margin="10dip"
                android:background="@drawable/abc_button_roundcorner_chuiniu"
                android:hint="请输入"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#868687"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dzrel"
            android:layout_marginTop="20dip" >

            <TextView
                android:id="@+id/jzsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="截止时间"
                android:textColor="#000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/lay_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jzsj"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tx_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:layout_weight="3"
                    android:background="@drawable/abc_button_roundcorner_chuiniu"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tx_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:layout_weight="2"
                    android:background="@drawable/abc_button_roundcorner_chuiniu"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            
           
        </RelativeLayout>
         <Button
            android:id="@+id/sure_TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/rel"
            android:layout_marginTop="50dp"
            android:padding="10dp"
             android:background="@drawable/abc_button_roundcorner_chuiniu"
            android:text="完成"
            android:textColor="@color/lan"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/zhufeiyu1/Documents/studiowork/kq3/KQ/res/layout/abc_activity_creatbrag.xml -->