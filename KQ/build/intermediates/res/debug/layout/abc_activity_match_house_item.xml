<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ececec" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/mc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间名  |"
            android:textColor="@color/text_color1"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/houseName_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mc"
            android:text="测试"
            android:textColor="@color/text_color1"
            android:textSize="18sp" 
            android:layout_marginLeft="5dp"/>
  <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_match"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/glbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比赛:"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/matchName_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/glbs"
            android:textColor="@color/text_color" />

      
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" 
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cjr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房主:"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/creater_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/createPerson_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color" />
        
        <TextView
            android:id="@+id/joined_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/top_bar_normal_bg" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_joined"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/yjr"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="已加入:"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/joined_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/abc_button_roundcorner_light_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/text_color" />

        <LinearLayout
            android:id="@+id/ll_joiners"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/joined_textView"
            android:layout_toRightOf="@id/yjr"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ececec" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/new_common_bg" />

</LinearLayout><!-- From: file:/Users/zhufeiyu1/Documents/studiowork/kq3/KQ/res/layout/abc_activity_match_house_item.xml -->