<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 基础主题 -BaseTheme -->
    <style name="BaseTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/common_bg</item>
    </style>

    <!-- 扩展主题 -Theme -->
    <style name="Theme.NoBackground" parent="@style/BaseTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme_day" parent="@style/BaseTheme">
        <item name="qd_main_text">@color/main_text</item>
        <item name="bottom_nav_background">@drawable/bottom_title_text_color_selector</item>
        <item name="top_nav_background">#b4232e</item>
        <item name="activity_bg">#f6f6f6</item>
        <item name="qd_charge_layout_bg">#f5f5f5</item>
        <item name="text_color_fff">#ffffff</item>
        <item name="text_color_333">#333333</item>
        <item name="text_color_666">#666666</item>
        <item name="text_color_999">#999999</item>
        <item name="text_color_000">#000000</item>
        <item name="text_color_656666">#656666</item>
        <item name="text_color_cb0b3e">#cb0b3e</item>
        <item name="text_color_e15642">#e15642</item>
        <item name="split_line_color_c5c5c5">#c5c5c5</item>
        <item name="split_line_color_dcdcdc">#dcdcdc</item>
        <item name="split_line_color_dadada">#dadada</item>
    </style>

    <style name="AppTheme_night" parent="@style/AppTheme_day"></style>

</resources>