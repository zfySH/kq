<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg" >

        <include layout="@layout/abc_include_back_btn" />

        <TextView
            android:id="@+id/fragment_person__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/abc_fragment_person__title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_bar_font_size" />

        <ImageButton
            android:id="@+id/img_setting"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_top_bar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@color/top_bar_normal_bg"
            android:src="@drawable/setting"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/abc_fragment_person__iv_person"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:contentDescription="@string/image_desc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/abc_button_roundcorner_gray"
                android:text="编辑"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_concern"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/abc_button_roundcorner_gray"
                android:text="关注"
                android:textColor="#fff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_private "
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/abc_button_roundcorner_gray"
                android:text="私信"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/abc_fragment_nearby__listview__btn_sex_age"
                android:layout_width="35dip"
                android:layout_height="15dip"
                android:layout_marginBottom="2dp"
                android:background="@drawable/man"
                android:clickable="false"
                android:drawableLeft="@drawable/abc_sex_man"
                android:focusable="false"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_adder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rel_trends"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/txt_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_trends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_num1"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:text="动态"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_concern"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/txt_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_concern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_num2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:text="关注"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_follower"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/txt_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_num3"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:text="粉丝"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

           <!--  <RelativeLayout
                android:id="@+id/rel_integral"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/txt_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_num4"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:text="积分"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout> -->
        </LinearLayout>
    </LinearLayout>

    <cn.kangeqiu.kq.refresh.PullToRefreshView
        android:id="@+id/main_pull_refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white" >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:divider="@color/transparent"
                android:orientation="vertical" />
        </ScrollView>
    </cn.kangeqiu.kq.refresh.PullToRefreshView>
   

</LinearLayout>