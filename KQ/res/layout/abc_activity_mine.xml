<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_common_bg" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/fragment_person__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_bar_font_size" />

        <ImageButton
            android:id="@+id/img_setting"
            android:layout_width="@dimen/height_top_bar"
            android:layout_height="@dimen/height_top_bar"
            android:layout_alignParentRight="true"
            android:background="@color/top_bar_normal_bg"
            android:src="@drawable/setting"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:background="@color/white"
        android:paddingBottom="10dp" >

        <RelativeLayout
            android:id="@+id/detail_Rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/abc_fragment_person__iv_person"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dip" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/abc_arron_right" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/right"
                android:layout_toRightOf="@+id/abc_fragment_person__iv_person" >

                <TextView
                    android:id="@+id/name_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/abc_fragment_nearby__listview__btn_sex_age"
                    android:layout_width="35dip"
                    android:layout_height="15dip"
                    android:layout_below="@+id/name_Text"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/man"
                    android:clickable="false"
                    android:drawableLeft="@drawable/abc_sex_man"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_adder"
                    android:layout_width="fill_parent"
                    android:layout_height="15dip"
                    android:layout_below="@+id/name_Text"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@+id/abc_fragment_nearby__listview__btn_sex_age"
                    android:gravity="center_vertical"
                    android:text="上海 浦东"
                    android:textColor="@color/text_color1"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/detail_Rel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#e9e9e9" />

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rel_trends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_num1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/dynamic_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="动态"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_concern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_num2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/frient_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_num3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/fans_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/relativeLayout1"
        android:background="#e9e9e9" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:layout_marginTop="10dp"
        android:background="@drawable/abc_button_roundcorner_white2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rel_myhouse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myhouse"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/myhouse" />

            <TextView
                android:id="@+id/room_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/room_count"
                android:layout_toRightOf="@+id/myhouse"
                android:text="我的房间"
                android:textColor="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:id="@+id/rel_mybrag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mybrag"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mybrag" />

            <TextView
                android:id="@+id/brag_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/brag_count"
                android:layout_toRightOf="@+id/mybrag"
                android:text="我的吹牛"
                android:textColor="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:id="@+id/rel_mybandicap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mybandicap"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mybandicap" />

            <TextView
                android:id="@+id/wager_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/wager_count"
                android:layout_toRightOf="@+id/mybandicap"
                android:text="我的竞猜"
                android:textColor="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:id="@+id/rel_myintegral"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myintegral"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/myintegral" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/score"
                android:layout_toRightOf="@+id/myintegral"
                android:text="我的积分"
                android:textColor="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:id="@+id/rel_myballcoin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myballcoin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/myballcoin" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/money"
                android:layout_toRightOf="@+id/myballcoin"
                android:text="我的球币"
                android:textColor="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <!--
    <ListView
        android:id="@+id/detail_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:layout_marginTop="10dip"
        android:background="@drawable/abc_button_roundcorner_white1"
        android:divider="@color/transparent" >
    </ListView>
    -->

</RelativeLayout>