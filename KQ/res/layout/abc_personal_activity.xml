<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/abc_personal_activity__tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人活动"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_bar_font_size" />

        <Button
            android:id="@+id/abc_personal_activity__btn_create"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_top_bar"
            android:layout_alignParentRight="true"
            android:background="@color/top_bar_normal_bg"
            android:text="发起活动"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone" />

       
            <Button
            android:id="@+id/abc_personal_activity__btn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_top_bar"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@color/top_bar_normal_bg"
            android:drawableLeft="@drawable/mm_title_back"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#DADBDA" />

    <ListView
        android:id="@+id/abc_personal_activity__lv_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#DADBDA"
        android:dividerHeight="1dip"
        android:fadingEdge="none" />
   

</LinearLayout>